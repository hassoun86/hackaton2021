{
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "typeRoots": [
        "node_modules/@types",
    ],
    "types": [
        "jquery"
    ]
  },
  "include": [
    "src"
  ]
}
